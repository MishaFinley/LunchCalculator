@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LunchCalculator</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav>
            <div class="menu-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">LunchCalculator</a>
            </div>


            @if (Context.Session.GetString("username") != null)
            {
                <div class="menu-item">
                    <a asp-controller="User" asp-action="Profile">Profile</a>
                </div>

                <div class="v-divider">|</div>

                <div class="menu-item">
                    <a asp-controller="User" asp-action="Logout">Logout</a>
                </div> 
            }
            else
            {

                <div class="menu-item">
                    <a asp-controller="User" asp-action="CreateAccount">Create Account</a>
                </div>

                <div class="menu-item">
                    <a asp-controller="User" asp-action="Login">Login</a>
                </div>
            }

        </nav>
    </header>

    <main role="main" class="main">
        @RenderBody()
    </main>

    <footer>
        &copy; 2020 - LunchCalculator
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
