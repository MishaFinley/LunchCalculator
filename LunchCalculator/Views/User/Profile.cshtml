<div class="cont">
    <div class="title">Lunch?</div>

    <div class="subtitle">@ViewData["Title"]</div>

    <div class="profile">

        <div class="info-cont">

            <div class="username">
                <label>Username: &ensp;</label>
                
                <div id="user">@ViewBag.profile.username</div>
            </div>

            @*
                <label>Dietary Restrictions: </label>
                @{ foreach (var restriction in ViewBag.profile.dietaryRestrictions)
                  {
                    <div>@restriction</div>
                        <form method="post" class="act-form" action="/User/Restriction">
                            <input type="hidden" name="restriction" value="@restriction" />
                                <div>
                                    <input type="submit" value="Remove" />
                                </div>
                        </form>
                  }
                 }
            *@

            <div class="diet-reqs">

                <label>Dietary Requirements: </label>


                 @{
                     if(ViewBag.profile.dietaryRequirements == null || ViewBag.profile.dietaryRequirements.Count < 1)
                     {
                         <div class="note">You currently have no dietary requirements.</div>
                     }

                     foreach (var requirement in ViewBag.profile.dietaryRequirements)
                     {
                         <div class="req-item">
                            <div class="req-name">@requirement</div>
                            <form method="post" class="act-form" action="/User/Requirement">
                                <input type="hidden" name="requirement" value="@requirement" />
                                    <div>
                                        <input class="button2" type="submit" value="Remove" />
                                    </div>
                            </form>
                         </div>

                   } 
                  }

            </div>
        </div>

        <div class="form-cont-profile">

            <form method="post" class="act-form">
                
                <div class="subtitle2">Change your password below</div>
                
                <div class="inp-cont-border">
                    <!--//asp-for="Password"-->

                    <div class="inp-label-sized">
                        <label class="inp-label">New Password:</label>
                    </div>

                    <input type="password" name="password" class="inp-lg" />
                    <!--//asp-validation-for="Password"-->

                    <span></span>
                </div>

                <div class="inp-cont-border">

                    <div class="inp-label-sized">
                        <label class="inp-label">Confirm Password:</label>
                    </div>

                    <input type="password" name="passwordcon" class="inp-lg" />

                    <span></span>
                </div>
                <div class="subtitle2">Add Dietary Requirements Below</div>

                @*
                    <div class="inp-cont-nbg">
                        <div class="inp-label-sized">
                            <label class="inp-label">Add Restriction:</label>
                        </div>
                        <input type="text" name="restriction" class="inp-lg" />
                        <span></span>
                    </div>
                *@

                <div class="inp-cont-border">
                    <div class="inp-label-sized">
                        <label class="inp-label">Add Requirement:</label>
                    </div>

                    <input type="text" name="requirement" class="inp-lg" />

                    <span></span>
                </div>

                <div class="subtitle2">Change your zip: </div>

                <div class="inp-cont-border">
                    <div class="inp-label-sized">
                        <label class="inp-label">Zip:</label>
                    </div>

                    <input type="text" name="zip" class="inp-lg" value="@ViewBag.profile.zip" />

                    <span></span>
                </div>

                <div class="subtitle2">Confirm changes with your current password</div>

                <div class="inp-cont-border">

                    <!--//asp-for="Password"-->
                    <div class="inp-label-sized">
                        <label class="inp-label">Old Password:</label>
                    </div>

                    <input type="password" name="old" class="inp-lg" />

                    <!--//asp-validation-for="Password"-->
                    <span></span>

                </div>

                <div>
                    <input class="button2" type="submit" value="Update" />
                </div>

            </form>
        </div>
    </div>
</div>
